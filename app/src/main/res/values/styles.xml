<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearances -->
    <style name="TextAppearance.HyperPlux.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="TextAppearance.HyperPlux.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextAppearance.HyperPlux.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.HyperPlux.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>
    <style name="ShapeAppearance.HyperPlux.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>
    <style name="ShapeAppearance.HyperPlux.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_large</item>
    </style>

    <!-- Button Widgets -->
    <style name="Widget.HyperPlux.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAppearance">@style/TextAppearance.HyperPlux.Button</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>
    <style name="Widget.HyperPlux.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:textAppearance">@style/TextAppearance.HyperPlux.Button</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
    </style>
    <style name="Widget.HyperPlux.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:textAppearance">@style/TextAppearance.HyperPlux.Button</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <!-- Card View -->
    <style name="Widget.HyperPlux.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius_medium</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <!-- TextInputLayout -->
    <style name="Widget.HyperPlux.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_small</item>
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
</resources>